% environment 
%  pseudocode
%  \begin{pseudocode} with one optional parameter: minipage-width
%  ...like in tabbing environment...
%  \end{pseudocode}
%
%  pseudocode in a framed box
%  \begin{fpseudocode} with one optional parameter: minipage-width
%  ...like in tabbing environment...
%  \end{fpseudocode}
%
%
% commands (to be used in pseudocode environment) 
%  \IF
%  \THEN
%  \ELSE
%  \FOR
%  \TO
%  \WHILE
%  \DO
% -----------------------------------------------------------------------

\newsavebox{\fminibox}
\newlength{\fminilength}
\newenvironment{fminipage}[1][\linewidth]%
{\setlength{\fminilength}{#1-2\fboxsep-2\fboxrule}%
 \begin{lrbox}{\fminibox}\begin{minipage}{\fminilength}}
{\end{minipage}\end{lrbox}\noindent\fbox{\usebox{\fminibox}}}

\newenvironment{pseudocode}[1][\linewidth]%
{\begin{minipage}{#1}\vspace{2mm}\sf\begin{tabbing}\hspace*{4mm}\=%
\hspace{4mm}\=\hspace{4mm}\=\hspace{4mm}\=\hspace{4mm}\=%
\hspace{4mm}\=\hspace{4mm}\=\hspace{4mm}\=\hspace{4mm}\=%
\hspace{4mm}\=\hspace{4mm}\=\hspace{4mm}\=\hspace{4mm}\=\kill}
{\end{tabbing}\end{minipage}\vspace{2mm}}

\newenvironment{cpseudocode}[1][\linewidth]%
{\begin{center}\begin{minipage}{#1}\sf\begin{tabbing}\hspace*{4mm}\=%
\hspace{4mm}\=\hspace{4mm}\=\hspace{4mm}\=\hspace{4mm}\=%
\hspace{4mm}\=\hspace{4mm}\=\hspace{4mm}\=\hspace{4mm}\=%
\hspace{4mm}\=\hspace{4mm}\=\hspace{4mm}\=\hspace{4mm}\=\kill}
{\end{tabbing}\end{minipage}\end{center}}

\newenvironment{fpseudocode}[1][\linewidth]%
{\begin{center}\begin{fminipage}[#1]\vspace{1ex}\sf\begin{tabbing}}
{\end{tabbing}\vspace{1ex}\end{fminipage}\end{center}}

